%files
   # TODO: this step will change (to git clone ...) when the repo is made public
   ../src/align-and-trees-parallel-workflow.sh /

%post
    # TODO: figure out the redundancy of variables
    export LC_ALL=C
    export DEBIAN_FRONTEND=noninteractive
    export OMPI_ALLOW_RUN_AS_ROOT=1
    export OMPI_ALLOW_RUN_AS_ROOT_CONFIRM=1
    export ATPWHOME=/opt/ATPW
    export ATPWBIN=/opt/ATPW/bin
    export PYTHON_VERSION=3.8
    export RAXML_VERSION=1.1.0
    export BMGE_VERSION=1.12
    export BMGEJAR=${ATPWHOME}/BMGE-${BMGE_VERSION}/BMGE.jar
    export PARGENES=${ATPWHOME}/ParGenes/pargenes/pargenes.py
    export TREESHRINK=${ATPWHOME}/TreeShrink/run_treeshrink.py

    apt-get update && apt-get -y upgrade

    # ## neened to install subversion
    # apt-get -y install software-properties-common
    # add-apt-repository universe
    # apt-get -y update
    # apt-get -y install subversion
    # ## end of subversion dependencies

    apt-get -y --no-install-recommends install \
        bc \
        bison \
        build-essential \
        cmake \
        curl \
        default-jre \
        flex \
        git \
        hmmer \
        liblist-moreutils-perl \
        libopenmpi-dev \
        mafft \
        muscle \
        parallel \
        perl \
        pigz \
        python${PYTHON_VERSION} \
        python${PYTHON_VERSION}-dev \
        python3-setuptools \
        r-base-dev=3.6.3-2 \
        software-properties-common \
        subversion \
        unzip \
        vim \
        wget

    ln -s /usr/bin/python${PYTHON_VERSION} /usr/bin/python

    #R --slave -e 'install.packages(c("ape", "PBD", "BMS"), repos="https://cloud.r-project.org/")'
    #curl -O https://bootstrap.pypa.io/get-pip.py && \
    #python get-pip.py && \
    #rm get-pip.py

    mkdir -p ${ATPWHOME}/bin

    # When we have a public repo, we can clone
    mv /align-and-trees-parallel-workflow.sh ${ATPWBIN}/
    chmod +x ${ATPWBIN}/align-and-trees-parallel-workflow.sh

    # RAxML-NG (v1.1.0)
    cd ${ATPWHOME}
    wget https://github.com/amkozlov/raxml-ng/releases/download/${RAXML_VERSION}/raxml-ng_v${RAXML_VERSION}_linux_x86_64.zip
    unzip -p raxml-ng_v${RAXML_VERSION}_linux_x86_64.zip raxml-ng > ${ATPWBIN}/raxml-ng
    chmod +x ${ATPWBIN}/raxml-ng
    rm raxml-ng_v${RAXML_VERSION}_linux_x86_64.zip

    # TreeShrink (v1.3.9). Needs R > 4!
    cd ${ATPWHOME}
    git clone https://github.com/uym2/TreeShrink.git
    cd TreeShrink
    bash ./install_BMS.sh
    python setup.py install
    chmod +x run_treeshrink.py
    cd -

    # fastagap.pl
    cd ${ATPWHOME}
    git clone https://github.com/nylander/fastagap.git
    cp fastagap/fastagap.pl ${ATPWBIN}/
    chmod +x ${ATPWBIN}/fastagap.pl

    # BMGE (v1.12)
    cd ${ATPWHOME}
    wget http://ftp.pasteur.fr/pub/gensoft/projects/BMGE/BMGE-${BMGE_VERSION}.tar.gz
    tar xzf BMGE-${BMGE_VERSION}.tar.gz
    rm BMGE-${BMGE_VERSION}.tar.gz

    # ParGenes
    cd ${ATPWHOME}
    git config --global --add safe.directory /opt/ATPW/ParGenes
    git clone --recursive https://github.com/BenoitMorel/ParGenes.git
    cd ParGenes
    ./install.sh
    chmod -R o+rX ${ATPWHOME}/ParGenes/pargenes/pargenes_binaries/*
    cd -

    # PRANK
    cd ${ATPWHOME}
    wget http://wasabiapp.org/download/prank/prank.linux64.170427.tgz
    tar -zxf prank.linux64.170427.tgz
    chmod -R 755 ${ATPWHOME}/prank
    cd -

    # MACSE
    svn checkout https://github.com/ranwez/MACSE_V2_PIPELINES/trunk/OMM_MACSE
    rm -rf /OMM_MACSE/V*_FREEZED
    svn checkout https://github.com/ranwez/MACSE_V2_PIPELINES/trunk/UTILS
    chmod 755 /OMM_MACSE/*.sh
    chmod -R 755 /UTILS/LGS_Fasta/*.sh

    #chmod -R o+rX ${ATPWHOME}

    rm -rf /var/lib/apt/lists/*
    apt-get clean
    unset DEBIAN_FRONTEND

%help
    Singularity container with Align-and-trees-parallel-workflow (ATPW)

%labels
    Author johan.nylander@nrm.se
    Version v0.8.0

%environment
    # TODO: figure out the redundancy of variables
    export LC_ALL=C
    export BMGE_VERSION=1.12
    export BMGEJAR=${ATPWHOME}/BMGE-${BMGE_VERSION}/BMGE.jar
    export PARGENES=${ATPWHOME}/ParGenes/pargenes/pargenes.py
    export TREESHRINK=${ATPWHOME}/TreeShrink/run_treeshrink.py
    export MACSE=/OMM_MACSE/S_OMM_MACSE_V11.05.sh
    export ATPWHOME=/opt/ATPW
    export ATPWBIN=${ATPWHOME}/bin
    export PATH=${ATPWBIN}:${PATH}:${ATPWHOME}/ParGenes/pargenes/pargenes_binaries
    # macse
    export LG_UTILS_PATH="/UTILS"
    export LG_MAFFT="mafft"
    export LG_MUSCLE="muscle"
    export LG_PRANK="${ATPWHOME}/prank/bin/prank"
    export LG_MACSE="/UTILS/macse_v2.05.jar"
    export LG_HMMCLEANER="/UTILS/HMMcleanerV1_8_VR2/HMMcleanAA_VR.pl "

%runscript
    ${ATPWBIN}/align-and-trees-parallel-workflow.sh "$@"

